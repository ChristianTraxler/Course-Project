<!DOCTYPE html>
<html>
    <head>
       <script>
           function changeMe(id){
               if(id.id == "myH2"){
                   document.getElementById("myH2").innerHTML="Cruises in the Orient";
               }else{
                   document.getElementById("cruises").style.fontSize="30px";
               }            
           }
           function loseIt(id){
               document.getElementById(id.id).style.display="none";
           }
        </script>
    </head>
    <body>
        <h2 id="myH2" onclick="changeMe(this);"> Hello world! </h2>
        <ul id="cruises" onclick="changeMe(this);">
            <li>Shanghai</li>
            <li>Hong Kong</li>
        </ul>
         <h2 id="new" onclick="loseIt(this);">A New Venue</h2>
    </body>
</html>